<% provide(:title, @post.title + ' | ') %>
<% require 'rails_rinku' %>

<h1><%= @post.title %></h1>
<h3><%= link_to 'Home', root_path %> >> <%= link_to 'Blog entries', posts_path %> >> <a href="/posts/<%= @post.id %>-<%= @post.title.parameterize %>"><%= @post.title %></a></h3>

<p id="notice"><%= notice %></p>

<p>
  <b>Author:</b>
  <%= @post.author %>
</p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= auto_link(@post.content.gsub(/\n/, '<br/>')).html_safe %>
</p>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
