<% provide(:title, @post.name + ' | ') %>

<h1><%= @post.name %></h1>
<h3><%= link_to 'Home', root_path %> >> <%= link_to 'Blog entries', posts_path %> >> <a href="/posts/<%= @post.id %>-<%= @post.name.parameterize %>"><%= @post.name %></a></h3>

<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @post.name %>
</p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content.gsub(/\n/, '<br/>').html_safe %>
</p>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
